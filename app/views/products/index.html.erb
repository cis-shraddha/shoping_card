<h1>Listing products</h1>

<table>
  <tr>
    <th>Product name</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <div style="display:inline">
<%#= link_to 'category_mangment', categories_path %>
<%#= link_to 'log_out',  destroy_user_session_path , :method => :delete%>
</div>
<% @products.each do |product| %>
  <tr class=" <%= cycle('list_line_odd' , 'list_line_even' ) %>" >
<tr>
    <td><%= product.product_name %></td>
    <td><%= product.price %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },  :class => 'btn btn-mini btn-danger' %></td>
  </tr>
</tr>
<% end %>
</table>
 <%= form_tag products_path, :method => :get do  %>
    <p>
      <%= text_field_tag :search %>                              
    </p>
     <p class="button">
         <%= submit_tag "Search" %>
     </p>
   <% end %>

<br />
<%= will_paginate @products %>


<%= link_to 'New Product', new_product_path , :class => 'btn btn-mini btn-danger'%>
